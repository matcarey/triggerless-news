{
  "manifest_version": 2,
  "name": "Triggerless News",
  "description": "This extension will block potentially triggering items from news sites.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon-small.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.theguardian.com/*"
      ],
      "css": [
        "guardian.css"
      ],
      "js": [
        "stateManager.js",
        "guardian.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}